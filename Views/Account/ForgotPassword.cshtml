@model ContactsBook.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
<section id="loginForm" style="max-width: 35rem; margin: auto; margin-top: 4rem;">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">@ViewBag.Title</h4>
        <h6 class="text-center">Enter your email and you will get a confirmation link to change your password.</h6>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
                <input type="submit" class="btn btn-outline-light" value="Email Link" />
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
