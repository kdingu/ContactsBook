@model ContactsBook.ViewModels.ContactViewModel
@{
    ViewBag.Title = "NewAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="max-width: 35rem; margin: auto; margin-top: 4rem;">
    @using (Html.BeginForm("SaveNewAddress", "Contact"))
    {
        <h4 class="text-center">Add new address for: @Model.Contact.FirstName @Model.Contact.LastName</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Address.ContactAddress, new { @class = "col-form-label" })
            @Html.TextBoxFor(m => m.Address.ContactAddress, new { @class = "form-control form-control-mg-top-5 form-control-mg-bot-5", placeholder = "Should not leave this field empty" })
            @Html.ValidationMessageFor(m => m.Address.ContactAddress)
        </div>
        <hr />
        @Html.HiddenFor(m => m.Contact.Id)
        @Html.HiddenFor(m => m.Contact.FirstName)
        @Html.HiddenFor(m => m.Contact.LastName)
        <button type="submit" class="btn btn-outline-success">Save</button>
        @Html.ActionLink("Cancel", "Details", "Contact", new { Model.Contact.Id }, new { @class = "btn btn-outline-secondary" })
    }
</div>

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")

}
